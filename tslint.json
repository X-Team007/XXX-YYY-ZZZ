{
        "extends": [
                "tslint:latest",
                "tslint-react"
        ],
        "rules": {
                "ban": [
                        true,
                        [
                                "Object",
                                "assign",
                                "use TS2.2 object spread { ...a, ...b }"
                        ],
                        [
                                "describe",
                                "only"
                        ],
                        [
                                "it",
                                "only"
                        ]
                ],
                "jsx-curly-spacing": [
                        false
                ],
                "jsx-no-lambda": false,
                "linebreak-style": [
                        true,
                        "LF"
                ],
                "object-literal-sort-keys": false,
                "ordered-imports": [
                        false
                ],
                "quotemark": [
                        true,
                        "single",
                        "avoid-escape"
                ],
                "variable-name": [
                        true,
                        "ban-keywords",
                        "check-format",
                        "allow-leading-underscore",
                        "allow-pascal-case"
                ]
        },
        "jsRules": {
                "object-literal-shorthand": true,
                "trailing-comma": [
                        false
                ]
        }
}